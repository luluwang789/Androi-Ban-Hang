<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".View.ChiTiecSanPham">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitiecsanpham"
        android:background="@drawable/custom_backgroundtoolbar"
        app:titleTextColor="@color/colorWhite"
        app:title="Chi Tiết Sản Phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageviewanhchitiec"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textviewtenchitiec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="chi tiếc sản phẩm"
                android:textColor="#ff00"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textviewgiachitiec"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="#9e0e3caf"
                    android:text="Gía sản phẩm"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btnyeuthich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@color/Transparent"
                    android:src="@drawable/ic_favorite_border"></ImageButton>
            </LinearLayout>
            <Spinner
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:background="@drawable/spinner"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <ImageButton
                android:id="@+id/buttongiohang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_button_dangnhap"
                android:scaleType="centerInside"
                android:src="@drawable/ic_local_grocery_store"
                android:text="Thêm Gỉo Hàng"
                android:textColor="#04ff00" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#97be0c"
            android:textSize="20sp"
            android:text="Mô Tả Sản Phẩm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:id="@+id/textviewmotachitiec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>