<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".View.DangKyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardangky"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/custom_backgroundtoolbar"
        app:title="Đăng ký"
        app:titleTextColor="@color/colorWhite">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/custom_button_dangky"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorWhite"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Đăng Ký"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edittexthodangky"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_edittext_dangnhap"
                    android:fontFamily="@font/montserrat"
                    android:hint="Họ"
                    android:inputType="textPersonName"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edittextTendangky"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@drawable/custom_edittext_dangnhap"
                    android:fontFamily="@font/montserrat"
                    android:hint="Tên"
                    android:inputType="textPersonName"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="10dp"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/edittextemail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext_dangnhap"
                android:fontFamily="@font/montserrat"
                android:hint="Email"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/edittextmatkhau"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext_dangnhap"
                android:fontFamily="@font/montserrat"
                android:hint="Mật Khẩu"
                android:inputType="textPassword"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/edittextnhaplaimatkhau"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext_dangnhap"
                android:fontFamily="@font/montserrat"
                android:hint="Nhâp Lại Mật Khẩu"
                android:inputType="textPassword"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/edittextsodienthoaidangky"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext_dangnhap"
                android:fontFamily="@font/montserrat"
                android:hint="Số Điện Thoại"
                android:inputType="number"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
           android:layout_margin="10dp">

            <EditText
                android:id="@+id/edittextsodiachi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext_dangnhap"
                android:fontFamily="@font/montserrat"
                android:hint="Địa Chỉ"
                android:singleLine="true">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobuttonnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="NAM" />

            <RadioButton
                android:id="@+id/radiobuttonnu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Nữ" />
        </RadioGroup>

            <Button
                android:id="@+id/buttondangkytaikhoan"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button_dangnhap"
                android:text="Đăng Ký"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/textviewcanhbao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#ff00" />
    </LinearLayout>
</LinearLayout>