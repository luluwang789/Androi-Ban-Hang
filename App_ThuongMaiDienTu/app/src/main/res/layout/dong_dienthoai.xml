<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageviewdienthoai"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textviewtendienthoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điện Thoại"
                    android:textColor="#ff00"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textviewgiadienthoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gía Điện Thoại"
                    android:textColor="#3743ec"
                    android:textSize="15sp" />
                <!--        <TextView-->
                <!--            android:textColor="#61626c"-->
                <!--            android:text="mô tả"-->
                <!--            android:textSize="16sp"-->
                <!--            android:id="@+id/textviewmotadienthoai"-->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:layout_height="wrap_content" />-->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>